<style>
  body { background-image: url(<%= asset_path 'Gwent_cardart_neutral_phoenix.jpg' %>) }
</style>
<h1>Welcome New MiniRpg User</h1>
<%= form_for @user, html: { class: "auth-form" } do |f| %>
  <ul>
    <li>
      <%= f.label :username %>
      <%= f.text_field :username %>
    </li>
    <li>
      <%= f.label :password %>
      <%= f.password_field :password %>
    </li>
  </ul>
  <%= f.submit %>
<% end %>
